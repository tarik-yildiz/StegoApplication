<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:background="@drawable/select_image"
        android:id="@+id/select_image"
        android:layout_width="100dp"
        android:layout_height="100dp">
    </ImageView>
    <EditText
        android:id="@+id/message_edittext"
        android:hint="@string/encoded_text"
        android:layout_width="200dp"
        android:layout_height="200dp">
    </EditText>
    <EditText
        android:id="@+id/key_edittext"
        android:hint="@string/key_text"
        android:layout_width="300dp"
        android:layout_height="50dp">
    </EditText>
    <Switch
        android:id="@+id/switch_item"
        android:text="@string/switch_encode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </Switch>
    <Button
        android:text="@string/encode_button_text"
        android:id="@+id/encode_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </Button>
</LinearLayout>